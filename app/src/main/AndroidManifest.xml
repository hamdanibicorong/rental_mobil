<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rental.android.rental_apps">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.rental.android.rental_apps.PrefsApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.rental.android.rental_apps.ActivityLogin"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rental.android.rental_apps.ActivityRegister"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.rental.android.rental_apps.admin.AdminMain"
            android:screenOrientation="portrait"
            android:theme="@style/nLiveoDrawer" />
        <activity
            android:name="com.rental.android.rental_apps.user.UserMain"
            android:screenOrientation="portrait"
            android:theme="@style/nLiveoDrawer" />
        <activity
            android:name="com.rental.android.rental_apps.admin.ActivityDetailCars"
            android:screenOrientation="portrait"
            android:theme="@style/AppDetail" />
        <activity
            android:name="com.rental.android.rental_apps.user.ActivityDetailUserCars"
            android:screenOrientation="portrait"
            android:theme="@style/AppDetail" />
        <activity
            android:name="com.rental.android.rental_apps.admin.ActivityDetailUsers"
            android:screenOrientation="portrait"
            android:theme="@style/AppDetail" />
        <activity
            android:name="com.rental.android.rental_apps.admin.AdminEditProfile"
            android:screenOrientation="portrait"
            android:theme="@style/AppDetail" />
        <activity
            android:name="com.rental.android.rental_apps.admin.ActivityCreateAdmin"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.rental.android.rental_apps.admin.ActivityCreateMobil"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.rental.android.rental_apps.admin.ActivityEditMobil"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.rental.android.rental_apps.user.ActivityListTransaksi"
            android:label="List Mobil"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.rental.android.rental_apps.admin.ActivityDetailListTransaksi"
            android:label="List Mobil"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.rental.android.rental_apps.user.ActivityDetailListHistory"
            android:label="List Mobil"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity android:name="com.rental.android.rental_apps.user.SplashActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"></activity>
    </application>

</manifest>